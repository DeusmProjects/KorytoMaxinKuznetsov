@model KorytoServiceDAL.ViewModel.CarViewModel

@{
    ViewBag.Title = "Просмотр машины";
}

<h2>Просмотр машины</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CarName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CarName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

    </dl>

    <table class="table">
        <tr>
            <th>
                Деталь
            </th>
            <th>
                Количество
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.CarDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DetailName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Вернуться к списку машин", "Index")
</p>
