@using KorytoModel
@model KorytoServiceDAL.ViewModel.OrderViewModel

@{
    ViewBag.Title = "Создание заказа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создание заказа</h2>


@using (Html.BeginForm("CreateOrderPost", "Order", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p>
                @Html.ActionLink("Добавить автомобиль", "AddCar")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderCars[0].CarName)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.OrderCars)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CarName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td></td>
                    </tr>
                }

            </table>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку заказов", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
