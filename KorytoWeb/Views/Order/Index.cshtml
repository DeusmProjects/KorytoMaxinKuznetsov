@model KorytoServiceDAL.ViewModel.OrderViewModel

@{
    ViewBag.Title = "Создание заказа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создание заказа</h2>

@using (Html.BeginForm("CreateOrderPost", "Order", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <p>
                @Html.ActionLink("Добавить автомобиль", "AddCar")
            </p>
            @if (ViewBag.Service.GetPopularCarClient(Globals.AuthClient.Id) != null)
            {
                <p>В последнее время Вы чаще всего заказывали @ViewBag.Service.PopularCar(Globals.AuthClient.Id). Не хотите приобрести еще?</p>
            }
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderCars[0].CarName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderCars[0].Amount)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.OrderCars)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CarName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td></td>
                    </tr>
                }

            </table>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("ReservePost", "Order", FormMethod.Post))
{
    <div class="form-group">
        <div class="col-lg-push-9">
            <input type="submit" value="Зарезервировать" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку заказов", "Index", "Orders")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
