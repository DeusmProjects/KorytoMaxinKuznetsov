@model IEnumerable<KorytoServiceDAL.ViewModel.CarViewModel>

@{
    ViewBag.Title = "Список машин";
}

<h2>Список машин</h2>

<p>
    <div class="col-md-2">@Html.ActionLink("Фильтровать", "Filter")</div>
    <div>@Html.ActionLink("Весь список", "Index")</div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CarName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
